pl.xlabel('Freq (Hz)')
pl.ylabel('ASD (strain)')
pl.grid()

pl.subplot(212)
pl.loglog(freqs, np.sqrt(Pxx_hanning))
pl.title('ASD, hanning')
pl.xlabel('Freq (Hz)')
pl.ylabel('ASD (strain)')
pl.grid()


